@model KotikiShop.Models.ViewModels.CatVM

<form method="post" enctype="multipart/form-data">
	<div class="border p-3">
		<h2 class="text-white">Add Cat</h2>
		<hr />
		<div class="d-flex justify-content-between">
			<div class="col-8">
				@*<div asp-validation-summary="All"></div>*@
				@*<input asp-for="Description" class="form-control" placeholder="Description"/>*@
				<div class="form-floating  mb-1">
					<input asp-for="Name" class="form-control"></input>
					<label asp-for="Name"></label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-floating mb-1">
					<textarea asp-for="Description" class="form-control"></textarea>
					<label asp-for="Description"></label>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="form-floating mb-1">
					<input asp-for="Birthday" type="date" class="form-control" placeholder="Birthday"/>
					<label asp-for="Birthday"></label>
					<span asp-validation-for="Birthday" class="text-danger"></span>
				</div>
				<div class="form-floating mb-1">
					<input asp-for="Price" type="number" step="0.0001" class="form-control" placeholder="Price" />
					<label asp-for="Price"></label>
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
				<div class="form-floating mb-1">
					<select asp-for="Gender" id="genderForm" class="form-select">
						<option value="0">Female</option>
						<option value="1">Male</option>
					</select>
					<label asp-for="Gender"></label>
				</div>
				<div class="form-floating mb-2">
					<select asp-for="CatFamilyId" id="catFamily" class="form-select">
						@foreach (var item in Model.catFamilies)
						{
							<option value="@item.Id">@item.Name.ToString()</option>
						}
					</select>
					<label>Cat Family</label>
					<span asp-validation-for="CatFamilyId" class="text-danger"></span>
				</div>
				<div class="d-flex flex-row mx-3 gap-3">
					<button type="submit" class="btn btn-primary w-100">Create</button>
					<a asp-controller="Admin" asp-action="ManageCats" class="btn btn-secondary w-100">Back</a>
				</div>
			</div>

			<div class="picture col-4 d-flex flex-column align-items-end px-2">
				<div class="w-100 h-100 d-flex align-items-center justify-content-center">
					<img src ="/images/no_picture.png" id="image_upload_preview" class="img-fluid" style="object-fit: contain; max-height: 240px;" />
				</div>
				<input asp-for="ImageUrl" id="inputFile" type = "file" name = "file" itemid = "uploadBox" class="form-control w-100">
			</div>
		</div>
	</div>
</form>

<script src="/js/image_preview.js" defer></script>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}