@model KotikiShop.Models.Cat

<form method="post" asp-action="DeleteCat">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-white">Delete Cat</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Admin" asp-action="ManageCats" class="btn btn-secondary" style="width:150px;">Back</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}