@model KotikiShop.Models.ViewModels.CatVM

<form method="post" asp-action="EditCat" enctype="multipart/form-data">
	<div class="border p-3">
		<h2 class="text-white">Edit Cat</h2>
		<hr />
		<div class="d-flex justify-content-between">
			@*<div asp-validation-summary="All"></div>*@
			<input asp-for="Id" value="@Model.Id" hidden />
			<div class="col-8">
				<div class="mb-1">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="mb-1">
					<label asp-for="Description"></label>
					<input asp-for="Description" class="form-control" />
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="mb-1">
					<label asp-for="Birthday"></label>
					<input asp-for="Birthday" type="date" class="form-control" />
					<span asp-validation-for="Birthday" class="text-danger"></span>
				</div>
				<div class="mb-1">
					<label asp-for="Price"></label>
					<input asp-for="Price" type="number" step="1" class="form-control" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
				<div class="mb-1">
					<select asp-for="Gender" id="genderForm" class="form-select">
						<option disabled>Select Gender</option>
						@if (Model.Gender == CatGender.FEMALE)
						{
							<option value="0" selected>Female</option>
						}
						else {
							<option value="0">Female</option>
						}
						@if (Model.Gender == CatGender.MALE)
						{
							<option value="1" selected>Male</option>
						}
						else
						{
							<option value="1">Male</option>
						}
					</select>
				</div>
				<div class="mb-2">
					<select asp-for="CatFamilyId" id="catFamily" class="form-select">
					@foreach (var item in Model.catFamilies)
					{
						if (item.Id == Model.CatFamilyId) {                        
							<option value="@item.Id" selected>@item.Name.ToString()</option>
						}
						else {
							<option value="@item.Id">@item.Name.ToString()</option>
						}
					}
					</select>
					<span asp-validation-for="CatFamilyId" class="text-danger"></span>
				</div>
				<div class="d-flex flex-row mx-3 gap-3">
					<button type="submit" class="btn btn-warning" style="width:150px; color:white;">Update</button>
					<a asp-controller="Admin" asp-action="ManageCats" class="btn btn-secondary" style="width:150px;">Back</a>
				</div>
			</div>

			<div class="picture col-4 d-flex flex-column align-items-end px-2">
				<div class="w-100 h-100 d-flex align-items-center justify-content-center">
					<img src ="/images/cats/no_picture.png" id="image_upload_preview" class="img-fluid" style="object-fit: contain; max-height: 240px;" />
				</div>
				<input asp-for="ImageUrl" id="inputFile" type = "file" name = "file" itemid = "uploadBox" class="form-control w-100">
			</div>
		</div>
	</div>
</form>

<script src="/js/site.js"></script>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}